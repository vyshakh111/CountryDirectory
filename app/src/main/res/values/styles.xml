<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="Widget.Textview.Normal" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.TextView.Normal.Heading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.TextView.Normal.SubHeading" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="navigationIcon">@drawable/ic_arrow_white_black_24dp</item>
        <item name="tint">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.Floating.SubMenu" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorSurface</item>
        <item name="tint">@null</item>
        <item name="fabSize">mini</item>
    </style>

    <style name="Widget.Floating.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/round_corner_view</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
